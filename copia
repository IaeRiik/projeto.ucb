document.querySelectorAll("#jobs-item img").forEach(img => {
    img.addEventListener("mouseenter", () => img.classList.add("zoom"));
    img.addEventListener("mouseleave", () => img.classList.remove("zoom"));
});

msg.addEventListener("input", () => {
    msg.nextElementSibling?.remove();
    const contador = document.createElement("p");
    contador.textContent = msg.value.length + "/200";
    msg.insertAdjacentElement("afterend", contador);
});


const topoBtn = document.createElement("button");
topoBtn.id = "topo";
topoBtn.textContent = "⬆";
document.body.appendChild(topoBtn);

window.addEventListener("scroll", () => {
    topoBtn.style.display = window.scrollY > 400 ? "block" : "none";
});
topoBtn.onclick = () => window.scrollTo({ top: 0, behavior: "smooth" });

